    <!-- Seçili -->
    <item android:state_selected="true" android:drawable="@drawable/bg_hour_slot_selected"/>
    <!-- Geçmiş (disabled) -->
    <item android:state_enabled="false" android:drawable="@drawable/bg_hour_slot_past"/>
