<!-- res/layout/activity_teacher_subjects.xml -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/tutorist_surface">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="?attr/textAppearanceTitleLarge"
            android:text="Ders Seçimi"
            android:textColor="@color/tutorist_onSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="?attr/textAppearanceBodyMedium"
            android:text="Ders verebileceğiniz alanları buradan seçin"
            android:alpha="0.8"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/tutorist_surfaceVariant">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Ders -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ders">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spSubjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fiyat -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Fiyat (₺)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrice"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/Widget.Material3.Button"
                    android:text="Ekle / Güncelle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="14dp"
                    app:backgroundTint="@color/tutorist_primary"
                    android:textColor="@color/tutorist_onPrimary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvMsg"
            style="?attr/textAppearanceBodySmall"
            android:layout_marginTop="8dp"
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="?attr/textAppearanceTitleSmall"
            android:text="Derslerim"
            android:textColor="@color/tutorist_onSurface"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/tutorist_surfaceVariant">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList"
                android:padding="8dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
