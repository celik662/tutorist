<!-- res/layout/item_teacher.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/tutorist_surfaceVariant"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- İsim -->
        <TextView
            android:id="@+id/tvName"
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPrice"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Fiyat (adapter TextView bekliyor) -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:textStyle="bold"
            android:textColor="@color/tutorist_onPrimaryContainer"
            android:background="@drawable/bg_price_chip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Biyografi / kısa açıklama -->
        <TextView
            android:id="@+id/tvBio"
            style="?attr/textAppearanceBodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:alpha="0.9"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Rating bar -->
        <RatingBar
            android:id="@+id/rb"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBio"
            android:layout_marginTop="6dp"/>

        <!-- Rating metni -->
        <TextView
            android:id="@+id/tvRatingText"
            style="?attr/textAppearanceBodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0 (0)"
            android:alpha="0.85"
            app:layout_constraintBaseline_toBaselineOf="@id/rb"
            app:layout_constraintStart_toEndOf="@id/rb"
            android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
