<!-- res/layout/activity_teacher_home.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tutorist_surface">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="96dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- BaÅŸlÄ±k kartÄ± -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/tutorist_primaryContainer"
            app:strokeColor="@color/tutorist_surfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvGreeting"
                    style="?attr/textAppearanceTitleMedium"
                    android:text="Merhaba ðŸ‘‹"
                    android:textColor="@color/tutorist_onPrimaryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvHint"
                    style="?attr/textAppearanceBodyMedium"
                    android:text="HÄ±zlÄ± aksiyonlar aÅŸaÄŸÄ±da."
                    android:textColor="@color/tutorist_onPrimaryContainer"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- HÄ±zlÄ± aksiyonlar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KÄ±sayollar"
            style="?attr/textAppearanceTitleSmall"
            android:textColor="@color/tutorist_onSurface"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubjects"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Ders ve Ãœcret"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAvailability"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="MÃ¼saitlik"
                app:cornerRadius="16dp"/>

            <!-- Bekleyen talepler + rozet -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequests"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bekleyen Talepler"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/tutorist_primary"
                    android:textColor="@color/tutorist_onPrimary"/>

                <TextView
                    android:id="@+id/badgeRequests"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|top"
                    android:translationX="-8dp"
                    android:translationY="8dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/bg_badge_circle"
                    android:visibility="gone"/>
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTeacherPast"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="GeÃ§miÅŸ Dersler"
                app:cornerRadius="16dp"/>
        </GridLayout>

        <!-- Profil -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfile"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            app:cornerRadius="16dp"
            android:layout_marginTop="12dp"/>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabUpcoming_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textAllCaps="false"
        android:visibility="gone"
        app:icon="@drawable/timer"
        app:iconPadding="8dp"
        app:backgroundTint="@color/tutorist_primary"
        app:iconTint="@color/tutorist_onPrimary"
        android:textColor="@color/tutorist_onPrimary"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>