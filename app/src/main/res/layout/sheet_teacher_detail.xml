<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/tutorist_surface"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Üst kart -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/tutorist_surfaceVariant"
            app:cardBackgroundColor="@android:color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Avatar (id KORUNDU: img) -->
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person_100"
                    android:contentDescription="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/bg_avatar_ring"
                    android:padding="2dp"/>

                <!-- Fiyat chip (id KORUNDU: tvPrice) -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺—"
                    android:textStyle="bold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:textColor="@color/tutorist_onPrimaryContainer"
                    android:background="@drawable/bg_price_chip"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- İsim (id KORUNDU: tvName) -->
                <TextView
                    android:id="@+id/tvName"
                    style="?attr/textAppearanceTitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Öğretmen Adı"
                    android:textColor="@color/tutorist_onSurface"
                    app:layout_constraintStart_toEndOf="@id/img"
                    app:layout_constraintEnd_toStartOf="@id/tvPrice"
                    app:layout_constraintTop_toTopOf="@id/img"
                    android:layout_marginStart="12dp"/>

                <!-- Rating satırı -->
                <LinearLayout
                    android:id="@+id/rowRating"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_marginStart="8dp"
                        android:text="(0)"
                        android:textColor="@color/tutorist_onSurfaceVariant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Biyografi (id KORUNDU: tvBio) -->
                <TextView
                    android:id="@+id/tvBio"
                    style="?attr/textAppearanceBodyMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Biyografi"
                    android:alpha="0.9"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="0dp"
                    app:layout_constraintTop_toBottomOf="@id/rowRating"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Ders planla butonu (id KORUNDU: btnBook) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBook"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ders planla"
                    app:backgroundTint="@color/tutorist_primary"
                    android:textColor="@color/tutorist_onPrimary"
                    app:cornerRadius="14dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBio"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bölücü -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/tutorist_surfaceVariant"
            android:layout_marginBottom="8dp"/>

        <!-- Yorumlar başlığı -->
        <TextView
            android:text="Yorumlar"
            style="?attr/textAppearanceTitleMedium"
            android:textColor="@color/tutorist_onSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Yorum listesi (id KORUNDU: rvReviews) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
