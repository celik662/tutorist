<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/tutorist_surfaceVariant"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- SAĞ KOLON: geri sayım + Katıl -->
        <LinearLayout
            android:id="@+id/rightCol"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Geri sayım çipi -->
            <TextView
                android:id="@+id/chipCountdown"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:fontFamily="monospace"
                android:text="00:00"
                android:background="@drawable/bg_status_pending"
                android:textColor="@color/tutorist_onPrimaryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- dikey boşluk -->
            <View
                android:layout_width="0dp"
                android:layout_height="8dp"/>

            <!-- Katıl -->
            <Button
                android:id="@+id/btnJoin"
                android:text="Katıl"
                android:textAllCaps="false"
                android:minHeight="40dp"
                android:minWidth="84dp"
                android:background="@drawable/bg_btn_outline_primary"
                android:textColor="@color/tutorist_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Başlık: Ders adı • Öğretmen -->
        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/tutorist_onSurface"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rightCol"
            android:layout_marginEnd="12dp"/>

        <!-- Tarih • Saat -->
        <TextView
            android:id="@+id/tvWhen"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/tutorist_onSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rightCol"
            android:layout_marginEnd="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
