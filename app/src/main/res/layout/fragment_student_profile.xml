<!-- res/layout/fragment_student_profile.xml -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/tutorist_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık + mini açıklama -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceTitleLarge"
            android:text="Profil"
            android:textColor="@color/tutorist_onSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceBodyMedium"
            android:text="Bilgilerini güncelle, ödemelerini yönet."
            android:alpha="0.8"
            android:layout_marginBottom="12dp"/>

        <!-- AD SOYAD -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ad Soyad"
            app:startIconTint="@color/tutorist_onSurface"
            app:boxStrokeColor="@color/tutorist_outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:paddingStart="6dp"/>
            <!-- paddingStart: ikon ile metin arasında nazik bir boşluk -->
        </com.google.android.material.textfield.TextInputLayout>

        <!-- TELEFON -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Telefon"
            app:startIconTint="@color/tutorist_onSurface"
            app:boxStrokeColor="@color/tutorist_outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:imeOptions="actionDone"
                android:paddingStart="6dp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- KAYDET / ÇIKIŞ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kaydet"
                app:cornerRadius="14dp"
                app:icon="@drawable/save"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:backgroundTint="@color/tutorist_primary"
                android:textColor="@color/tutorist_onPrimary"/>

            <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Çıkış Yap"
                app:cornerRadius="14dp"
                app:icon="@drawable/logout_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <EditText
            android:id="@+id/etBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking ID gir"
            android:inputType="text"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnTestReminder10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: 10 dk hatırlatma gönder"/>

        <Button
            android:id="@+id/btnTestReminder60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test: 60 dk hatırlatma gönder"/>

        <Button
            android:id="@+id/btnTestPush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Bildirimi Gönder" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
