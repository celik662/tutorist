<!-- res/layout/activity_teacher_availability.xml -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/tutorist_surface">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Başlık -->
        <TextView
            style="?attr/textAppearanceTitleLarge"
            android:text="Müsaitlik Saatlerin"
            android:textColor="@color/tutorist_onSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- AÇIKLAMA: alpha kaldırıldı, renk night-friendly -->
        <TextView
            style="?attr/textAppearanceBodyMedium"
            android:text="Gün ve saat aralığını seç, + Aralık Ekle."
            android:textColor="@color/tutorist_onSurfaceVariant"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Alanlar kart içinde -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/tutorist_outline">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gün -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gün">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Başlangıç -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Başlangıç">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bitiş -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Bitiş">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdd"
                    style="@style/Widget.Material3.Button"
                    android:text="Aralık Ekle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="14dp"
                    app:backgroundTint="@color/tutorist_primary"
                    android:textColor="@color/tutorist_onPrimary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- MESAJ: alpha kaldırıldı, night-friendly renk -->
        <TextView
            android:id="@+id/tvMsg"
            style="?attr/textAppearanceBodySmall"
            android:layout_marginTop="8dp"
            android:textColor="@color/tutorist_onSurfaceVariant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Eklenen aralıklar -->
        <TextView
            style="?attr/textAppearanceTitleSmall"
            android:text="Eklenen Aralıklar"
            android:textColor="@color/tutorist_onSurface"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/tutorist_outline">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBlocks"
                android:padding="8dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
