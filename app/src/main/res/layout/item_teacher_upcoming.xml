<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/tutorist_surfaceVariant"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:text="Matematik • Öğrenci Adı"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/tutorist_onSurface"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/chipCountdown"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="3g 05:39"
                android:textStyle="bold"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:textColor="@color/tutorist_onPrimaryContainer"
                android:background="@drawable/bg_status_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvWhen"
            android:text="Sep 26, 2025 • 2:00 PM"
            android:textSize="14sp"
            android:textColor="@color/tutorist_onSurfaceVariant"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnJoin"
                android:text="Katıl"
                android:textAllCaps="false"
                android:minHeight="40dp"
                android:minWidth="84dp"
                android:background="@drawable/bg_btn_outline_primary"
                android:textColor="@color/tutorist_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
