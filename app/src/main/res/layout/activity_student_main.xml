<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/tutorist_surface"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- YAKLAŞAN DERS FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabUpcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="00:00"
        android:textAllCaps="false"
        android:visibility="gone"
        app:backgroundTint="@color/tutorist_primary"
        android:textColor="@color/tutorist_onPrimary"
        app:iconTint="@color/tutorist_onPrimary"
        app:icon="@drawable/timer" />
    <!-- /FAB -->
    <!-- İnce bir ayraç, içerik ile nav arasında nefes -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/tutorist_surfaceVariant"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:menu="@menu/menu_student_bottom"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/selector_bottomnav_tint"
        app:itemTextColor="@drawable/selector_bottomnav_tint"
        app:itemRippleColor="@drawable/selector_bottomnav_ripple"/>
</LinearLayout>
