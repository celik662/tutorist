<!-- res/layout/item_request.xml (mevcudun yerine) -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/tutorist_surfaceVariant"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Başlık (tvLine1 KORUNDU) -->
        <TextView
            android:id="@+id/tvLine1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/tutorist_onSurface"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivNote"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="8dp"/>

        <!-- Not ikonu (ivNote KORUNDU) -->
        <ImageView
            android:id="@+id/ivNote"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/retmen_notu"
            android:src="@android:drawable/ic_dialog_info"
            android:visibility="gone"
            android:padding="2dp"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvLine1"
            android:tint="@color/tutorist_info"/>

        <!-- Durum chip (YENİ: tvStatus) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Beklemede"
            android:textStyle="bold"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:background="@drawable/bg_status_pending"
            android:textColor="@color/tutorist_onPrimaryContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Alt satır (tvLine2 KORUNDU) -->
        <TextView
            android:id="@+id/tvLine2"
            android:textSize="14sp"
            android:textColor="@color/tutorist_onSurfaceVariant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvLine1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Aksiyonlar: İptal / Yorum -->
        <LinearLayout
            android:id="@+id/rowActions"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLine2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- İptal (btnCancel KORUNDU) -->
            <Button
                android:id="@+id/btnCancel"
                android:text="İptal Et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_outline_error"
                android:textColor="@color/tutorist_error"
                android:textAllCaps="false"/>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <!-- Yorum (btnReview KORUNDU) -->
            <Button
                android:id="@+id/btnReview"
                android:text="Yorum Yaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_outline_primary"
                android:textColor="@color/tutorist_primary"
                android:textAllCaps="false"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
