<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <!-- ESKİ tvLine1'İ SİLİN, YERİNE BU BLOĞU EKLEYİN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLine1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivNote"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/retmen_notu"
            android:src="@android:drawable/ic_dialog_info"
            android:visibility="gone"
            android:padding="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLine2"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/btnCancel"
        android:text="İptal Et"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <View
        android:layout_width="8dp"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/btnReview"
        android:text="Yorum Yaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:visibility="gone"/>
</LinearLayout>
