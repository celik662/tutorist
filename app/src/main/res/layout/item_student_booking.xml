<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/tutorist_surfaceVariant"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Başlık -->
        <TextView
            android:id="@+id/tvLine1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/tutorist_onSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivNote"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="8dp"/>

        <!-- Öğrenci yorumu bilgi ikonu (yeni) -->
        <ImageView
            android:id="@+id/ivReviewInfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:visibility="gone"
            app:tint="@color/tutorist_info"
            app:layout_constraintEnd_toStartOf="@id/ivNote"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvLine1"
            app:layout_goneMarginEnd="6dp"/>

        <!-- Not ikonu (öğretmen notu) -->
        <ImageView
            android:id="@+id/ivNote"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:src="@android:drawable/ic_dialog_info"
            android:visibility="gone"
            app:tint="@color/tutorist_info"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvLine1"
            app:layout_goneMarginEnd="6dp"/>

        <!-- Durum chip -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Beklemede"
            android:textStyle="bold"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:background="@drawable/bg_status_pending"
            android:textColor="@color/tutorist_onPrimaryContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Alt satır -->
        <TextView
            android:id="@+id/tvLine2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@color/tutorist_onSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/tvLine1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Aksiyonlar -->
        <LinearLayout
            android:id="@+id/rowActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvLine2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Katıl -->
            <Button
                android:id="@+id/btnJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katıl (tarayıcı)"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_outline_primary"
                android:textColor="@color/tutorist_primary"
                android:visibility="gone"/>

            <View android:layout_width="8dp" android:layout_height="0dp"/>

            <!-- İptal -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İptal Et"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_outline_error"
                android:textColor="@color/tutorist_error"/>

            <View android:layout_width="8dp" android:layout_height="0dp"/>

            <!-- Yorum -->
            <Button
                android:id="@+id/btnReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yorum Yaz"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_outline_primary"
                android:textColor="@color/tutorist_primary"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Yerel kayıt ipucu -->
        <TextView
            android:id="@+id/tvLocalRecordHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Kaçırmamanız için bu dersi 1 ay boyunca saklıyacağız."
            android:textSize="10sp"
            android:textColor="@color/tutorist_onSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
