// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Öğretmen avatarları (public okunur, sadece sahibi yazabilir)
    match /teachers/{userId}/{allPaths=**} {
      allow read: if true; // listede herkes görsün istiyoruz
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // (Opsiyonel) diğer her şeye default kapalı
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
